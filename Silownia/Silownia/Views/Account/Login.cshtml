@model Silownia.Models.Uzytkownik

@{
    ViewBag.Title = "Zaloguj się";
}
<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <section id="intro" class="container content-section text-center">
                    <div class="row, divCenter">
                        <div class="col-md-8, divCenter">
                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Login)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Haslo, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.Haslo, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Haslo)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Zaloguj" class="btn btn-block btn-default" />
                                        </div>
                                    </div>
                                }
                            </section>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </header>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
