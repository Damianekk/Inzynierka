@model Silownia.Models.Masaz
@{
    ViewBag.Title = "Masaż: edycja";
}
<h2>Edycja wybranego masażu</h2>
<div class="divDark">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MasazID)
            <div class="form-group">
                @Html.LabelFor(model => model.MasazystaID, "SilowniaID", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MasazystaID")
                    @Html.ValidationMessageFor(model => model.MasazystaID)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DataMasazu, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DataMasazu)
                    @Html.ValidationMessageFor(model => model.DataMasazu)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CzasTrwania, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CzasTrwania)
                    @Html.ValidationMessageFor(model => model.CzasTrwania)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-lg btn-large btn-success" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    <button class="btn btn-large btn-block btn-lg btn-primary btn-primary" onclick="location.href='@Url.Action("Index", "Masaz")';return false;">powrót do listy masaży</button>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
