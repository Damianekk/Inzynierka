@model Silownia.Models.Specjalizacja

@{
    ViewBag.Title = "Specjalizacja: Edit";
}

<h2>Edycja wybranej specjalizacji</h2>
<div class="divDark">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.SpecjalizacjaID)
            <div class="form-group">
                @Html.LabelFor(model => model.Nazwa, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nazwa)
                    @Html.ValidationMessageFor(model => model.Nazwa)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-lg btn-large btn-success" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    <button class="btn btn-large btn-block btn-lg btn-primary btn-primary" onclick="location.href='@Url.Action("Index", "Specjalizacja")';return false;">powrót do listy specjalizacji</button>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}