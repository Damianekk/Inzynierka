    <h3>
        @Html.ActionLink("Dodaj nową", "Create")
    </h3>
   

        <div class="container" style="background-color: grey">
        
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center">
                    Nasze sale 
                    <small><font color="black">Tak wygladaja nasze sale do ćwiczeń.</font></small>
                </h1>
            </div>
        </div>
       
    <div class="row center-block">
@foreach (var item in Model) {
        <div class="col-md-3 col-md-offset-1 portfolio-item">
            <a href="#">
                <img class="img-responsive" src="@item.ImageFile" alt="no file">
            </a>
            <h3>
                @Html.ActionLink("Sala "+ item.Rodzaj, "Details", new { id = item.Numer_sali })

            </h3>
            <p>@item.Opis</p>
        </div>
}
       
