@model IEnumerable<Silownia.Models.Sala>


@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sale</title>
</head>
<body>
    
    <h3>
        @Html.ActionLink("Dodaj nową", "Create")
    </h3>
   

        <div class="container" style="background-color: grey">
        
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center">
                    Nasze sale 
                    <small><font color="Black">Tak wygladaja nasze sale do ćwiczeń.</font></small>
                </h1>
            </div>
        </div>
       
    <div class="row center-block">
@foreach (var item in Model) {
        <div class="col-md-3 col-md-offset-1 portfolio-item">
          
                @*@Html.Partial("~/Views/Sala/Zdjecie.cshtml", Model)*@
                <img class="img-responsive" src="@item.Zdjecie" alt="no file">
            
            <h3>
                @Html.ActionLink("Sala "+ item.Rodzaj, "Details", new { id = item.Numer_sali })

            </h3>
            <p>@item.Opis</p>
            <button class="btn-danger btn-lg" onclick="location.href='@Url.Action("Delete", "Sala", new { id = item.Numer_sali })';return false;">usuń</button>
            
        </div>
}
    </div>

       </div>
</body>
</html>
