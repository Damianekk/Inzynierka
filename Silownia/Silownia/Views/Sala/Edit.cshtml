@model Silownia.Models.Sala

@{
    ViewBag.Title = "Edit";
}

<h2>Edytuj sale</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Numer_sali)

        <div class="form-group">
            @Html.LabelFor(model => model.Rodzaj, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rodzaj)
                @Html.ValidationMessageFor(model => model.Rodzaj)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Opis, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Opis)
                @Html.ValidationMessageFor(model => model.Opis)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageFile,"Zdjęcie", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ValidationSummary(true)
                @Html.EditorFor(model => model.ImageFile)
                @Html.ValidationMessageFor(model => model.ImageFile, "Musi byćto ścieżka do pliku ze zdjęciem!")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SilowniaID, "Siłownia", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SilowniaID", "Wybierz siłownie")
                @Html.ValidationMessageFor(model => model.SilowniaID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć do listy sal", "Index")
</div>
