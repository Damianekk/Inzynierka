@model Silownia.Models.Trener

@{
    ViewBag.Title = "Trener: edycja";
}

<h2>Edycja wybranego trenera:</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.OsobaID)

        <div class="form-group">
            @Html.LabelFor(model => model.Imie, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Imie)
                @Html.ValidationMessageFor(model => model.Imie)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nazwisko, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nazwisko)
                @Html.ValidationMessageFor(model => model.Nazwisko)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataUrodzenia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataUrodzenia)
                @Html.ValidationMessageFor(model => model.DataUrodzenia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataZatrudnienia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataZatrudnienia)
                @Html.ValidationMessageFor(model => model.DataZatrudnienia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pensja, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pensja)
                @Html.ValidationMessageFor(model => model.Pensja)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SpecjalizacjaID, "Siłownia", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SpecjalizacjaID")
                @Html.ValidationMessageFor(model => model.SpecjalizacjaID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SilowniaID, "Siłownia", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SilowniaID", String.Empty)
                @Html.ValidationMessageFor(model => model.SilowniaID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy trenerów", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
