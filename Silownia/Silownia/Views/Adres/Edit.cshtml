@model Silownia.Models.Adres
@{
    ViewBag.Title = "Adres: edycja";
}
<h2 class="textCenter">edycja wybranego adresu</h2>
<div class="divDark">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.AdresID)
            <div class="form-group">
                @Html.LabelFor(model => model.KodPocztowy, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.KodPocztowy)
                    @Html.ValidationMessageFor(model => model.KodPocztowy)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Kraj, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Kraj)
                    @Html.ValidationMessageFor(model => model.Kraj)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Miasto, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Miasto)
                    @Html.ValidationMessageFor(model => model.Miasto)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Ulica, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ulica)
                    @Html.ValidationMessageFor(model => model.Ulica)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NrBudynku, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NrBudynku)
                    @Html.ValidationMessageFor(model => model.NrBudynku)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NrLokalu, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NrLokalu)
                    @Html.ValidationMessageFor(model => model.NrLokalu)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-lg btn-large btn-success" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    <button class="btn btn-large btn-lg btn-block btn-primary btn-primary" onclick="location.href='@Url.Action("Index", "Adres")';return false;">powrót do listy adresów</button>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
