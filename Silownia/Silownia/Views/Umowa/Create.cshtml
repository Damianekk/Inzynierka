@model Silownia.Models.Umowa

@{
    ViewBag.Title = "Umowa: dodaj";
}

<h2>Dodaj nową umowę</h2>
 
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

       
        <div class="form-group">
            @Html.LabelFor(model => model.RecepcjonistaID, "Recepcjonista", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RecepcjonistaID",String.Empty)
                @Html.ValidationMessageFor(model => model.RecepcjonistaID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SilowniaID, "Siłownia", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SilowniaID", String.Empty)
                @Html.ValidationMessageFor(model => model.SilowniaID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataPodpisania, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataPodpisania)
                @Html.ValidationMessageFor(model => model.DataPodpisania)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DataZakonczenia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataZakonczenia)
                @Html.ValidationMessageFor(model => model.DataZakonczenia)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cena, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cena, new { @type = "number" })
                @Html.ValidationMessageFor(model => model.Cena)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>

        @if (TempData["msg"] != null)
        { @Html.Raw(TempData["msg"]) }
       
    </div>

  
}

<div>
    @Html.ActionLink("Powrót do listy umów", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
